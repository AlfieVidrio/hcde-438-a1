{
    "manifest_version": 3,
    "name": "Pokémon Linker",
    "description": "Changes the names of Pokémon to links to their Bulbapedia webpage.",
    "version": "1.0",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "pokeball.png"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content-scripts/replace.js"
            ]
        }
    ]
}